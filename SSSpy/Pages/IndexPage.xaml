<Page x:Class="SSSpy.Pages.IndexPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SSSpy.Pages"
      xmlns:ssspy="clr-namespace:SSSpy"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IndexPage">

    <WrapPanel>
        <Button Margin="5,5,5,5" ssspy:PageManager.ToPage="Setting"  Click="OnClickSwitchButton" ToolTip="数据库配置信息">
            <Image Width="100" Source="pack://application:,,,/Resources/Icons/DatabaseSetting.png"/>
        </Button>
        <Button Margin="5,5,5,5" ssspy:PageManager.ToPage="Database"  Click="OnClickSwitchButton" ToolTip="数据库信息">
            <Image Width="100" Source="pack://application:,,,/Resources/Icons/DatabaseInfo.png"/>
        </Button>
        <Button Margin="5,5,5,5" ssspy:PageManager.ToPage="Table"  Click="OnClickSwitchButton" ToolTip="数据表信息">
            <Image Width="100" Source="pack://application:,,,/Resources/Icons/TableInfo.png"/>
        </Button>
    </WrapPanel>
</Page>
